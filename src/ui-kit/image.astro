---
type Props = {
  src: string;
  alt: string;
  class?: string;
  rounded?: boolean;
  width?: number;
  height?: number;
};

const { src, alt, width, height, class: className, rounded = true } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  fetchpriority="high"
  class:list={[
    "border border-gray-200",
    className,
    {
      "rounded-xl": rounded,
    },
  ]}
/>
