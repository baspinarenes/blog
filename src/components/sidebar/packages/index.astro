---
import { PackageItem } from "@components";
import { C } from "@configuration";
import type { Lang } from "@models/type";
import { pathManager } from "@utils";

const locale = Astro.currentLocale as Lang;
---

<div class="flex flex-col gap-1">
  <h2 class="text-xs font-medium text-gray-500 mb-1 mx-2">Packages</h2>

  <div>
    {
      C.PACKAGES.map(
        (p) =>
          locale && (
            <PackageItem
              name={p.name}
              href={pathManager.changeLocale(p.href, locale)}
            />
          )
      )
    }
  </div>
</div>
