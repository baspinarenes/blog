---
import { SocialItem } from "@components";
import { C } from "@configuration";
---

<div class="flex flex-col gap-1">
  <h2 class="text-xs font-medium text-gray-500 mb-1 mx-2">Socials</h2>

  <div>
    {
      Object.entries(C.AUTHOR.SOCIAL_MEDIA).map(([key, value]) => (
        <SocialItem name={key} href={value} />
      ))
    }
  </div>
</div>
